:root {
  --bg: #0f172a;
  --card: #1e293b;
  --accent: linear-gradient(90deg, #2563eb, #06b6d4);
  --text: #ffffff;
  --muted: #94a3b8;
  --radius: 12px;
  --shadow: 0 10px 30px rgba(2, 6, 23, 0.35);
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: Inter, Poppins, Segoe UI, Arial, sans-serif;
  background: var(--bg);
  color: var(--text);
}

a {
  color: inherit;
  text-decoration: none;
}

.app-shell {
  min-height: 100vh;
}

.navbar {
  position: sticky;
  top: 0;
  z-index: 50;
  background: #0b1223;
  border-bottom: 1px solid #23304a;
  display: grid;
  grid-template-columns: 260px 1fr auto;
  gap: 16px;
  align-items: center;
  padding: 12px 20px;
}

.brand {
  font-weight: 800;
  letter-spacing: 0.3px;
  background: var(--accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.store-name {
  text-align: center;
  color: var(--muted);
  font-weight: 600;
}

.nav-links {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.nav-link {
  padding: 10px 14px;
  border-radius: 10px;
  color: var(--muted);
  transition: all 0.25s ease;
}

.nav-link:hover,
.nav-link.active {
  color: var(--text);
  background: #1a2740;
}

.container {
  padding: 20px;
}

.grid {
  display: grid;
  gap: 16px;
}

.grid-2 {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.grid-3 {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.grid-5 {
  grid-template-columns: repeat(5, minmax(0, 1fr));
}

.card {
  background: var(--card);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid #2a3a58;
  padding: 16px;
}

.card h3,
.card h2 {
  margin: 0 0 10px;
}

.muted {
  color: var(--muted);
}

input,
select,
button,
textarea {
  font: inherit;
  border-radius: 10px;
}

input,
select,
textarea {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #334766;
  background: #0f1b32;
  color: var(--text);
}

button {
  border: 0;
  padding: 10px 14px;
  cursor: pointer;
  color: #fff;
  background: #223554;
  transition: all 0.25s ease;
}

button:hover {
  transform: translateY(-1px);
}

.btn-primary {
  background: var(--accent);
}

.btn-danger {
  background: linear-gradient(90deg, #dc2626, #ef4444);
}

.toolbar {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  align-items: center;
}

.table-wrap {
  overflow-x: auto;
}

table {
  width: 100%;
  min-width: 760px;
  border-collapse: collapse;
}

th,
td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #2a3a58;
}

th {
  color: var(--muted);
  font-weight: 600;
}

.low-stock {
  color: #f59e0b;
  font-weight: 700;
}

.danger {
  color: #ef4444;
}

.success {
  color: #22c55e;
}

.chart-box {
  min-height: 320px;
  display: flex;
  flex-direction: column;
}

.empty-state {
  color: var(--muted);
  text-align: center;
  padding: 30px;
}

.login-wrap {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 20px;
}

.login-card {
  width: min(420px, 100%);
}

.invoice-page {
  max-width: 900px;
  margin: 20px auto;
  background: #fff;
  color: #111;
  border-radius: 10px;
  padding: 20px;
}

.invoice-page table {
  min-width: unset;
}

@media (max-width: 768px) {
  .navbar {
    grid-template-columns: 1fr;
    gap: 8px;
  }

  .store-name {
    text-align: left;
  }

  .nav-links {
    justify-content: flex-start;
  }

  .grid-2,
  .grid-3,
  .grid-5 {
    grid-template-columns: 1fr;
  }
}

@media print {
  .no-print,
  .navbar {
    display: none !important;
  }

  body {
    background: #fff;
  }
}
